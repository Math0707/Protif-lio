  <!-- //------------------------SCRIPTS-------------------------// -->
  <script>
    /* ========== RELOGIO (mantendo o seu) ========== */
    function atualizarRelogio() {
      const agora = new Date();
      const dias = ["Domingo","Segunda-feira","Terça-feira","Quarta-feira","Quinta-feira","Sexta-feira","Sábado"];
      const diaSemana = dias[agora.getDay()];
      const data = agora.toLocaleDateString("pt-BR", { day: "numeric", month: "long", year: "numeric" });
      const hora = agora.toLocaleTimeString("pt-BR");
      const label = document.querySelector(".card.tall .meta .label");
      const time = document.querySelector(".card.tall .meta .time");
      if(label) label.textContent = `${diaSemana}, ${data}`;
      if(time) time.textContent = hora;
    }
    setInterval(atualizarRelogio, 1000);
    atualizarRelogio();

    /* ========== INTERSECTION OBSERVER: reveal + stagger ========== */
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(entry=>{
        if(entry.isIntersecting){
          const el = entry.target;
          el.classList.add('is-visible');
          if(el.hasAttribute('data-stagger')){
            [...el.children].forEach((child,i)=> child.style.setProperty('--i', i));
          }
          io.unobserve(el);
        }
      });
    },{ threshold:.18 });
    document.querySelectorAll('[data-reveal],[data-stagger]').forEach(el=> io.observe(el));

    /* ========== SCROLL PROGRESS BAR ========== */
    const bar = document.querySelector('.scroll-progress');
    function setScrollBar(){
      const h = document.documentElement;
      const percent = (h.scrollTop) / (h.scrollHeight - h.clientHeight) * 100;
      if(bar) bar.style.width = percent + '%';
    }
    document.addEventListener('scroll', setScrollBar, {passive:true});
    setScrollBar();

    /* ========== TYPEWRITER no título ==========
       Se quiser “parar antes”, ajuste a string 'full' para o ponto desejado. */
    (function typeHero(){
      const el = document.getElementById('typewriter');
      if(!el) return;
      const full = "Soluções em dados\ncriadas para ser claras,\nprecisas e escaláveis.";
      let i = 0;
      const speed = 28; // ms por caractere
      function tick(){
        // suporta quebra de linha
        el.textContent = full.slice(0, i).replace(/\n/g, "\n");
        if(i < full.length){ i++; setTimeout(tick, speed); }
        // se quiser loop, chame reset após finalizar
      }
      tick();
    })();

    /* ========== REMOVIDO PARALLAX/HOVER NA FOTO ========== */

    /* ========== BOTÃO MAGNÉTICO (cta) ========== */
    document.querySelectorAll('.magnetic').forEach(btn=>{
      const strength = 20;
      btn.addEventListener('mousemove', (e)=>{
        const r = btn.getBoundingClientRect();
        const x = ((e.clientX - r.left) / r.width - .5) * strength;
        const y = ((e.clientY - r.top) / r.height - .5) * strength;
        btn.style.transform = `translate(${x}px, ${y}px)`;
      });
      btn.addEventListener('mouseleave', ()=> btn.style.transform = '');
    });

    /* ========== CURSOR DOT (mantido) ========== */
    const dot = document.querySelector('.cursor-dot');
    const isCoarse = matchMedia('(pointer:coarse)').matches;
    if(dot && !isCoarse){
      document.addEventListener('pointermove', (e)=>{
        dot.style.top = e.clientY + 'px';
        dot.style.left = e.clientX + 'px';
      });
      document.addEventListener('pointerdown', ()=> dot.style.opacity = .4);
      document.addEventListener('pointerup', ()=> dot.style.opacity = 1);
    }else if(dot){ dot.style.display = 'none'; }

    /* ========== TESTIMONIAL: setas + autoplay + transição suave ========== */
    (function(){
      const container = document.querySelector('.testimonial');
      if(!container) return;

      const quotes = [
        { q: "Trabalhar com o Matheus sempre foi um processo fluido: da definição do problema ao desenho da solução, passando por experimentos e entrega em produção. É nosso parceiro de dados.",
          n: "Paula N.", r: "Diretora de Produto" },
        { q: "Entrega rápida, comunicação clara e cuidado com qualidade. Os resultados falaram por si e aceleraram o roadmap de dados.",
          n: "Lucas M.", r: "Head de Engenharia" },
        { q: "Trouxe estrutura para a análise, testes bem definidos e documentação impecável. Excelente para projetos que precisam escalar.",
          n: "Carolina S.", r: "Gerente de Projetos" }
      ];

      const viewport = container.querySelector('.testimonial-viewport');
      const quoteEl = viewport.querySelector('.quote');
      const nameEl  = viewport.querySelector('.name');
      const roleEl  = viewport.querySelector('.role');
      const dots = [...container.querySelectorAll('.dots i')];
      const prev = container.querySelector('.chev.left');
      const next = container.querySelector('.chev.right');

      let idx = 0, timer;

      function render(i){
        viewport.classList.add('fade-out');
        setTimeout(()=>{
          quoteEl.textContent = quotes[i].q;
          nameEl.textContent  = quotes[i].n;
          roleEl.textContent  = quotes[i].r;
          dots.forEach(d=>d.classList.remove('active'));
          dots[i].classList.add('active');
          viewport.classList.remove('fade-out');
        }, 180);
      }
      function step(dir=1){
        idx = (idx + dir + quotes.length) % quotes.length;
        render(idx);
      }
      function autoplay(){
        clearInterval(timer);
        timer = setInterval(()=> step(1), 4500);
      }

      next?.addEventListener('click', ()=>{ step(1); autoplay(); });
      prev?.addEventListener('click', ()=>{ step(-1); autoplay(); });
      dots.forEach((d,i)=> d.addEventListener('click', ()=>{ idx=i; render(idx); autoplay(); }));

      render(idx);
      autoplay();
    })();

    /* ========== TECH CAROUSEL: duplicação para loop perfeito ========== */
    (function(){
      const track = document.querySelector('.tech-track');
      if(!track) return;
      track.innerHTML = track.innerHTML + track.innerHTML;
    })();

    /* ========== BRANDS MARQUEE: duplicação + loop infinito ========== */
    (function(){
      const track = document.querySelector('.brands-track');
      if(!track) return;
      track.innerHTML = track.innerHTML + track.innerHTML;
    })();

    /* ========== SUAVIZA ÂNCORAS ========== */
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const id = a.getAttribute('href');
        const target = document.querySelector(id);
        if(target){
          e.preventDefault();
          target.scrollIntoView({behavior:'smooth', block:'start'});
        }
      });
    });
  </script>
