:root {
  --bg: #0c0c0c;
  --text: #e9e9e9;
  --muted: #9aa1a7;
  --pill: #101010;
  --pill-dot: #5aff7b;
  --btn-bg: #fff;
  --btn-text: #0b0b0b;
  --link: #c6c6c6;
  --maxw: 1280px;

  --grain-op: .08;
  --ease-out: cubic-bezier(.22, 1, .36, 1);
}

html,
body {
  height: 100%
}

body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
  font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, "Helvetica Neue", Arial, "Noto Sans", sans-serif;

}

/* ===== HERO LAYOUT ===== */
.shell {
  min-height: 100vh;
  display: grid;
  grid-template-columns: 1fr 1fr
}

.left {
  position: relative;
  display: flex
}

.left-inner {
  width: 100%;
  max-width: var(--maxw);
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 64px clamp(24px, 5vw, 80px)
}

.badge {
  position: absolute;
  top: 28px;
  left: clamp(24px, 5vw, 80px);
  display: inline-flex;
  gap: 10px;
  align-items: center;
  background: var(--pill);
  border: 1px solid #1a1a1a;
  color: #cfcfcf;
  padding: 10px 14px;
  border-radius: 999px;
  font-size: 13px;
  letter-spacing: .1px
}

.badge i {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--pill-dot);
  display: inline-block;
  box-shadow: 0 0 0 4px rgba(90, 255, 123, .12);
  animation: pulse-dot 1.6s infinite cubic-bezier(.66, 0, 0, 1)
}

h1 {
  font-size: clamp(40px, 5vw, 64px);
  line-height: 1.05;
  margin: 0 0 24px;
  font-weight: 600;
  letter-spacing: -.02em;
  max-width: 720px
}

.lead {
  max-width: 620px;
  color: var(--muted);
  font-size: 18px;
  line-height: 1.8;
  margin-bottom: 36px
}

.cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56px;
  padding: 0 26px;
  border-radius: 999px;
  background: var(--btn-bg);
  color: var(--btn-text);
  font-weight: 600;
  font-size: 16px;
  text-decoration: none;
  box-shadow: 0 1px 0 rgba(255, 255, 255, .04) inset, 0 6px 18px rgba(0, 0, 0, .35);
  width: 130px;
  transition: transform .12s ease, box-shadow .2s ease
}

.cta:hover {
  transform: translateY(-1px);
  box-shadow: 0 1px 0 rgba(255, 255, 255, .04) inset, 0 10px 26px rgba(0, 0, 0, .45)
}

.foot {
  position: absolute;
  left: clamp(24px, 5vw, 80px);
  bottom: 26px;
  color: var(--muted);
  font-size: 13px
}

.foot a {
  color: var(--link);
  text-underline-offset: 3px
}

.right {
  flex: 1;
  height: 100vh;
  position: relative
}

.photo {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  height: 100vh
}

/* >>> ENTRADA SUAVE NO HERO (sem hover na foto) */
.hero-enter {
  animation: slideDown .8s var(--ease-out) both
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-14px)
  }

  to {
    opacity: 1;
    transform: none
  }
}

/* máscara/reveal da foto */
.reveal-clip {
  -webkit-mask: linear-gradient(#000 0 0) padding-box, linear-gradient(#000 0 0);
  mask: linear-gradient(#000 0 0) padding-box, linear-gradient(#000 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  border-radius: 18px;
  animation: clipIn 1.1s var(--ease-out) both .1s;
  border: 1px solid #1e1e1e
}

@keyframes clipIn {
  from {
    clip-path: inset(0 0 100% 0 round 18px)
  }

  to {
    clip-path: inset(0 0 0 0 round 18px)
  }
}

/* sem qualquer transform em hover na foto */
.right .photo {
  transition: none !important;
}

/* ===== TYPEWRITER no título ===== */
.headline-hero {
  /* remove a animação antiga */
  animation: none !important;
}

.typewriter {
  display: inline-block;
  white-space: pre-wrap;
  /* permite \n */
  overflow: hidden;
  border-right: 2px solid rgba(233, 233, 233, .8);
  /* cursor */
  animation: caret 1s step-end infinite;
}

@keyframes caret {
  50% {
    border-color: transparent
  }
}

/* ===== RESPONSIVE HERO ===== */
@media (max-width:1100px) {
  .shell {
    grid-template-columns: 1.05fr .95fr
  }
}

@media (max-width:900px) {
  .shell {
    grid-template-columns: 1fr
  }

  .right {
    height: 60vh;
    min-height: 420px
  }

  .badge {
    position: static;
    margin: 20px 0 0 0
  }

  .left-inner {
    padding-top: 28px
  }

  .foot {
    position: static;
    margin-top: 36px
  }
}

/* ===== SECTION 2 ===== */
.s2 {
  background: var(--bg);
  padding: 64px 0 100px
}

.s2-wrap {
  max-width: var(--maxw);
  margin: 0 auto;
  padding: 0 clamp(24px, 5vw, 80px)
}

.s2-grid {
  display: grid;
  grid-template-columns: 1.05fr 1.6fr .95fr;
  gap: 32px
}

.card {
  background: #131313;
  border: 1px solid #1e1e1e;
  border-radius: 18px;
  padding: 28px 28px 26px;
  box-shadow: 0 24px 40px rgba(0, 0, 0, .35)
}

.card h3,
.card h2 {
  margin: 0 0 12px
}

.eyebrow {
  font-size: 24px;
  line-height: 1.45;
  font-weight: 600;
  color: #f0f0f0
}

.eyebrow span {
  color: #ffb08a
}

.muted {
  color: var(--muted);
  font-size: 14.5px;
  line-height: 1.8;
  max-width: 420px
}

.card.tall {
  display: flex;
  flex-direction: column;
  gap: 18px;
  padding: 32px
}

.card.tall .cta.small {
  align-self: flex-start;
  background: #fff;
  color: #111;
  height: 46px;
  padding: 0 22px;
  border-radius: 999px;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center
}

.card.tall .meta {
  margin-top: auto
}

.card.tall .meta .label {
  color: var(--muted);
  font-size: 14px;
  margin-bottom: 6px
}

.card.tall .meta .time {
  font-size: 32px;
  font-weight: 700;
  letter-spacing: .5px
}

/* ==== TESTIMONIAL ==== */
.testimonial {
  position: relative;
  padding: 40px 44px;
  overflow: hidden
}

.testimonial-viewport {
  transition: opacity .2s var(--ease-out), transform .2s var(--ease-out)
}

.testimonial-viewport.fade-out {
  opacity: .0;
  transform: translateY(8px)
}

.testimonial .quote {
  font-size: 32px;
  line-height: 1.35;
  letter-spacing: -.01em;
  margin: 0 0 28px;
  max-width: 980px;
  color: #f2f2f2
}

.testimonial .person {
  color: #cfcfcf
}

.testimonial .name {
  font-weight: 600
}

.testimonial .role {
  color: var(--muted);
  font-size: 14px;
  margin-top: 6px
}

.testimonial .dots {
  display: flex;
  gap: 10px;
  margin-top: 22px
}

.testimonial .dots i {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #3a3a3a;
  cursor: pointer
}

.testimonial .dots i.active {
  background: #cfcfcf
}

.testimonial .arrows {
  position: absolute;
  right: 20px;
  bottom: 22px;
  display: flex;
  gap: 12px
}

.chev {
  width: 34px;
  height: 34px;
  border-radius: 8px;
  border: 1px solid #2a2a2a;
  background: #151515;
  position: relative;
  cursor: pointer
}

.chev::before {
  content: "";
  position: absolute;
  inset: 0;
  margin: auto;
  width: 8px;
  height: 8px;
  border-right: 2px solid #9e9e9e;
  border-bottom: 2px solid #9e9e9e;
  transform: rotate(-45deg)
}

.chev.left::before {
  transform: rotate(135deg)
}

/* ==== STACK CAROUSEL (infinito, sem alterar tamanho) ==== */
.stack {
  display: flex;
  flex-direction: column;
  gap: 24px
}

.card.small {
  padding: 26px 24px
}

.card.small h3 {
  font-size: 18px
}

.tech-carousel {
  overflow: hidden;
  position: relative;
  width: 265px
}

.tech-track {
  display: flex;
  gap: 8px;
  animation: tech-scroll 4s linear infinite
}

@keyframes tech-scroll {
  0% {
    transform: translateX(0)
  }

  100% {
    transform: translateX(-50%)
  }
}

.pill {
  flex: 0 0 auto;
  width: 50px;
  height: 50px;
  border-radius: 5px;
  background: #030303;
  border: 1px solid #2b2b2b;
  box-shadow: 0 10px 20px rgba(0, 0, 0, .28);
  display: flex;
  align-items: center;
  justify-content: center
}

.pill img {
  width: 32px;
  height: 32px;
  object-fit: contain
}

.logo-box {
  margin-top: 16px;
  font-weight: 900;
  font-size: 56px;
  letter-spacing: .5px
}

/* ==== BRANDS: “quase transparente” + marquee infinito ==== */
.brands-marquee {
  position: relative;
  overflow: hidden;
  margin-top: 86px
}

.brands-track {
  display: inline-flex;
  gap: 56px;
  white-space: nowrap;
  will-change: transform;
  animation: brands-scroll 30s linear infinite
}

.brands-track span {
  font-weight: 800;
  font-size: 36px;
  line-height: 1;
  display: inline-block;
  color: transparent;
  -webkit-text-stroke: 1px rgba(255, 255, 255, .12);
  text-shadow: 0 0 1px rgba(255, 255, 255, .04);
}

@keyframes brands-scroll {
  0% {
    transform: translateX(0)
  }

  100% {
    transform: translateX(-50%)
  }
}

@media (max-width:1200px) {
  .testimonial .quote {
    font-size: 28px
  }

  .s2-grid {
    grid-template-columns: 1fr 1.2fr .9fr
  }
}

@media (max-width:980px) {
  .s2-grid {
    grid-template-columns: 1fr;
    gap: 20px
  }

  .brands-track {
    gap: 28px
  }
}

/* ===== SECTION 3 – PROJECTS ===== */
.projects {
  padding: 80px 0 40px
}

.proj-wrap {
  max-width: var(--maxw);
  margin: 0 auto;
  padding: 0 clamp(24px, 5vw, 80px)
}

.proj-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20px;
  margin-bottom: 36px
}

.proj-title {
  font-size: 44px;
  line-height: 1.05;
  margin: 0 0 12px;
  font-weight: 600
}

.proj-desc {
  max-width: 620px;
  color: var(--muted);
  line-height: 1.9
}

.proj-ctrl {
  display: flex;
  gap: 14px;
  align-items: center;
  margin-top: 10px;
  opacity: .9
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #2b2b2b
}

.dot.active {
  background: #cfcfcf
}

.proj-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 28px
}

.proj-card {
  position: relative;
  height: 420px;
  background: #0e0e0e;
  border: 1px solid #1e1e1e;
  border-radius: 18px;
  overflow: hidden;
  box-shadow: 0 24px 40px rgba(0, 0, 0, .35)
}

.proj-card::after {
  content: "";
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  opacity: .9;
  filter: brightness(.7)
}

.proj-card.p1::after {
  background-image: url('project-1.jpg')
}

.proj-card.p2::after {
  background-image: url('project-2.jpg')
}

.proj-card.p3::after {
  background-image: url('project-3.jpg')
}

.proj-card.p4::after {
  background-image: url('project-4.jpg')
}

.proj-nav {
  display: flex;
  gap: 12px;
  align-items: center
}

.proj-nav .chev {
  width: 36px;
  height: 36px
}

/* grid deslizável em telas menores */
.proj-grid {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: 280px;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch
}

.proj-card {
  scroll-snap-align: start
}

@media (max-width:1100px) {
  .proj-grid {
    grid-template-columns: repeat(2, 1fr)
  }
}

@media (max-width:720px) {
  .proj-title {
    font-size: 36px
  }

  .proj-grid {
    grid-template-columns: 1fr
  }
}

